	</head>



	<body>
		<header class="background_effect ">
	
			<!-- <div class="video_container">
				<video muted  loop>
					<source src="../assets/video.mp4" type="video/mp4" />
				</video>
			</div> -->
			
			<div 
			<!-- Nav Bar -->
			<nav id="nav_bar">
				<div class="nav_center">
					<div class="nav_logo">
						<!-- image logo -->
						<img src="" alt="Page_logo" class="logo" />
					</div>
					<div class="links_container">
						<ul class="nav_links">
							<li>
								<a href="/users/userprofile/<%= userID %>" class="scroll_link">User Profile</a>
							</li>
							<li>
								<a href="/users/logout" class="btn btn-secondary">Logout</a>
							</li>
						</ul>
					</div>
					
				</div>
			</nav>
			<section class="main_section">
				<div class="main_section_wrapper main_center">
					<!-- About us section -->
					<div id="info_about_us">
						<p class="lead mb-3">Welcome <%= username %></p>
					</div>
					<!-- Form Section -->
					<div id="form_section">
						<h1 class="header_style">Book A Delivery</h1>
						<form action="" method="POST">
							<div class="row">
								<div class="form_group">
									<label class="label" for="">Name</label>
								
									<input
										class="input_field"
										type="text"
										name="username"
										placeholder="Enter your name"
										required
									/>
								</div>
								<div class="form_group">
									<label class="label" for="">Email</label>
								
									<input
										class="input_field"
										type="text"
										name="email"
										placeholder="Enter your phone email"
									/>
								</div>
							</div>
							<div class="form_group">
								<label class="label" for="">Phone Number</label>
							
								<input
									class="input_field"
									type="tel"
									name="p_number"
									placeholder="Enter your phone number"
									required
								/>
							</div>

							<div class="form_group">
								<label class="label" for="">Pickup location</label> <br />
								<input
									class="input_field"
									type="text"
									name="username"
									placeholder=""
									required
								/>
							</div>
							<div class="form_group">
								<label class="label" for="">Destination</label> <br />
								<input
									class="input_field"
									type="text"
									name="username"
									placeholder=""
									required
								/>
							</div>

							<div class="form_group">
								<label class="label" for="">Pickup Date/Time</label> <br />
								<input
									class="input_field"
									type="datetime-local"
									name="pickupdate"
									id="pick_date"
									value="01-12-2020"
									min="01-01-2020"
								/>
							</div>
							<div class="form_group">
								<label class="label" for="text-area"
									>Additional Information</label
								>
							
								<textarea
									class="text_area"
									name="more-desc"
									id="text-area"
									cols="30"
									rows="10"
									placeholder="Enter More Information about delivery"
								></textarea>
							</div>

							<div class="btn">
								<button class="sub_btn" type="submit">BOOK NOW</button>
							</div>
						</form>
					</div>
				</div>
			</section>
		</header>
		<!-- Contact Section
		<section class="contact_section">
