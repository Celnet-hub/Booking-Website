<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> <%= UserName %>'s Profile
      </h1>
     <!-- Note: files to include must be in the same
    folder with the file to render to the included file -->
      <%- include('partials/messages.ejs') %>
      <form action="/users/register" method="GET">
        <div class="form-group>
          <label for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= UserName %>"
            readonly
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= Email %>"
            readonly
          />
        </div>
        <div class="form-group">
          <label for="name">Phone Number</label>
          <input
            type="tel"
            id="phone number"
            name="phone"
            class="form-control"
            placeholder="Enter Phone Number"
            value="<%= Phone %>"
            readonly
          />
        </div>
        <a href="/users/edit/<%= userID %>" class="btn btn-primary btn-block">
          Update Profile
        </a>
      </form>
      <a href="/dashboard">Cancel</a>
    </div>
  </div>
</div>